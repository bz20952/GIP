import pandas as pd
import numpy as np
import matplotlib.pyplot as plt

data = pd.read_csv("/Users/lloydlangley/Desktop/GIP/gle/backend/data/RANDOM_2048_0.csv", header=0)

n = len(data[0])
f = np.fft.fftfreq(n, 1/2048)
f = f[:n//2]
fft = np.abs(np.fft.fft(data[0]))[:n//2]

plt.scatter(f, fft)
plt.xlabel('Frequency [Hz]')
plt.ylabel('Amplitude')
plt.title('Discrete Fourier Transform of Acceleration')
plt.legend()
plt.grid(True)
plt.xlim(0, (max(f)))  # Set limits for the x-axis (frequency)
plt.ylim(0, (max(fft[100:])*1.2))  # Set limits for the y-axis (frequency)


